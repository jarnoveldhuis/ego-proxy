<!DOCTYPE html>

<html lang="en">

<head>
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-FJPMPMZGB2"></script>
  <script>
    window.dataLayer = window.dataLayer || [];

    function gtag() {
      dataLayer.push(arguments);
    }
    gtag('js', new Date());
    gtag('config', 'UA-76345573-1');
    gtag('config', 'G-FJPMPMZGB2');
  </script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <meta charset="UTF-8">
  <!-- <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no"> -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="output.css" rel="stylesheet">
  <!-- Primary Meta Tags -->
  <title><%= Object.keys(proxies)[0] %> Proxy</title>
  <meta name="title" content="Ego-Proxy" />
  <meta name="description" content="Talk to <%= Object.keys(proxies)[0] %>." />

  <!-- Open Graph / Facebook -->

  <meta property="og:image" content="<%= proxies[Object.keys(proxies)[0]].smile[0].url %>" />
  <meta property="og:type" content="website" />
  <meta property="og:title" content="Ego-Proxy" />
  <meta property="og:description" content="Talk to <%= Object.keys(proxies)[0] %>." />
  <meta property="twitter:image" content="<%= proxies[Object.keys(proxies)[0]].smile[0].url %>" />
  <link rel="icon" href="/img/proxicon.ico" sizes="any" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">

</head>

<body>
  <div id="full-container">
    <div id="chat-container">
      <div id="prompt"></div>
      <div class="chat speech bottom text-with-border response-container" id="response-container">
        <div class="speech-content">
          <div id="botResponse"></div>
          <div id="audioControls" style="display:none;">
            <i class="fas fa-play audio-control-icon" id="playIcon" title="Replay"></i>
            <i class="fas fa-download audio-control-icon" id="downloadIcon" title="Download"></i>
          </div>
          <div id="voiceLoad"></div>
        </div>
      </div>
      <div class="bot-container" style="background-image: url('/img/guest.png');">
        <img id="botImage" src="/img/guest.png" alt="proxi" />
      </div>

      <div class="input-container">
        <form id="ask" autocomplete="off" action="/ask/" onsubmit="askBot(event); gtag('event', 'submission', {'event_category': 'Chat', 'event_label': 'AskBot'}); return false;">
          <div class="submitAs">
            <div class="input-group input-group-sm mb-3">
              <div class="input-group-prepend">
                <select class="form-select" aria-label=" select" id="submitAs" name="as">
                  <% if (context.submitAsOptions && context.context !=='Custom' ) { %>
                  <% context.submitAsOptions.forEach(function(option) { %>
                  <option value="<%= option %>">
                    <%= option %>
                  </option>
                  <% }); %>
                  <% } %>
                </select>
              </div>
              <br>
              <textarea class="userInput form-control" id="userInput" type="text" name="name" rows="1" placeholder="Say something..."></textarea>
            </div>
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <div>
              <button class="btn" id="ttsButton" type="button" aria-label="Toggle sound">
                <i class="fas fa-volume-mute" id="ttsIcon"></i>
              </button>
              <button class="btn" type="button" data-bs-toggle="modal" data-bs-target="#feedbackModal">
                <i class="fas fa-envelope"></i>
              </button>
              <% if (context.alias !== "CT" ) { %>
              <button class="btn toggle-button" id="toggleButton" type="button" data-bs-toggle="modal" data-bs-target="#settingsModal" display="block">
                <i class="fas fa-cog"></i>
              </button>
              <% } %>
            </div>

            <div class="d-flex align-items-center">
              Submit to:&nbsp;
              <span id="newButtonPlaceholder"></span>
              <div class="btn-group" id="submitTo" role="group">
                <% if (context.submitToOptions && context.context !=='Custom' ) { %>
                <% context.submitToOptions.forEach(function(option) { %>
                <input class="btn btn-rounded btn-outline-dark btn-sm" name="go" type="submit" value="<%= option %>" data-tag="button-<%= option %>">
                <% }); %>
                <% } %>
              </div>
            </div>
          </div>
      </div>
      </form>
    </div>
  </div>
  </div>


  <!-- Settings Modal -->
  <div class="modal fade" id="settingsModal" tabindex="-1" aria-labelledby="hide" data-bs-backdrop="static" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="settingsModalLabel">Settings</h5>
        </div>

        <!-- Success Alert -->
        <div id="contextUpdated" class="alert alert-success alert-dismissible fade show" role="alert" style="display: none;">
          <div id='contextUpdated'>
            <h4 class="alert-heading">Profile Updated!</h4>
            Update the fields below to customize your proxy and share.
          </div>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <!-- Nav tabs -->
        <div id="navTabs">
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <button class="nav-link active" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Profile</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="share-tab" data-bs-toggle="tab" data-bs-target="#share" type="button" role="tab" aria-controls="share" aria-selected="true">Share</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="custom-tab" data-bs-toggle="tab" data-bs-target="#custom" type="button" role="tab" aria-controls="custom" aria-selected="true">Custom</button>
              </li>
              <!-- <li class="nav-item" role="presentation">
                <button class="nav-link" id="custom-tab" data-bs-toggle="tab" data-bs-target="#meet" type="button" role="tab" aria-controls="custom" aria-selected="true">Meet</button>
              </li> -->
        </div id="navTabs">
        </ul>
        <div class="modal-body">
          <!-- Dropdown to select context -->
          <div id="allContent" style="display: block">
            <div class="mb-3">
              <label for="contextSelect">Select Context:</label>
              <select class="form-control" id="contextSelect" onchange="updateContext(); updateUrl(this.value.toLowerCase().toString())">
                <option value="Settings" disabled>Select...</option>
                <option value="Introduction" selected <% if (context.context === 'Introduction') { %>selected<% } %>>Introduction</option>
                <option value="Interview" <% if (context.context === 'Interview') { %>selected<% } %>>Interview</option>
                <option value="Date" <% if (context.context === 'Date') { %>selected<% } %>>Date</option>
                <option value="Debate" <% if (context.context === 'Debate') { %>selected<% } %>>Debate</option>
              </select>

            </div>



            <div id="errorMessage" class="alert alert-danger" role="alert" style="display: none;">
              Update Failed
            </div>


          </div>
          <!-- Tab panes -->
          <div class="tab-content" id="myTabContent">
            <!-- Share Tab -->
            <div class="tab-pane fade" id="share" role="tabpanel" aria-labelledby="share-tab">
              <!-- Name Fields -->
              <div id='yourName'>Who will this proxy speak with?</div>
              <div class="input-group name input-group-sm mb-3">
                <input type="text" id="nameInput" placeholder="Enter name" onkeypress="return alpha(event)" oninput="updateUrl(context.context.toLowerCase())" pattern="[A-Za-z\s]+" title="Only letters and spaces are allowed">
              </div>
              <!-- Small Talk Fields -->
              <div id="smallTalkModal" style="display: none;">
              </div>

              <!-- Interview Fields -->
              <div id="interviewModal" style="display: none;">
                <div id='role'>Open Role:</div>
                <div class="input-group role input-group-sm mb-3">
                  <input type="text" id="roleInput" placeholder="Enter role" onkeypress="return alpha(event)" oninput="updateUrl('interview')">
                </div>
                <div id='org'>Organization:</div>
                <div class="input-group org input-group-sm mb-3">
                  <input type="text" id="orgInput" placeholder="Enter org" onkeypress="return alpha(event)" oninput="updateUrl('interview')">
                </div>
              </div>

              <!-- Date Fields -->
              <div id="dateModal" style="display: none;">
              </div>

              <!-- Debate Fields -->
              <div id="debateModal" style="display: none;">
                <div id='topic'>Topic:</div>
                <div class="input-group topic input-group-sm mb-3">
                  <input type="text" id="topicInput" placeholder="Enter topic" onkeypress="return alpha(event)" oninput="updateUrl('debate')">
                </div>
              </div>


              <!-- Shareable Fields -->
              <div id="allUrl" style="display: block">
                
                <div id='url'>Shareable URL:</div>
                <div class="input-group url input-group-sm mb-3">
                  <input type="text" id="urlInput" class="form-control col-10" readonly>
                  <button type="button" id="urlCopy" onclick="copyUrl()" class="btn btn-outline-primary" data-bs-toggle="tooltip" data-bs-placement="top" title="Copied!">Copy</button>
                </div>
              </div>
              <button type="button" class="btn btn-primary" style= "display:none" id="begin" onclick="processParameters()">Begin</button>
              <button type="button" class="btn btn-secondary" id="backToProfile" onclick="backToProfile()">Cancel</button>
            </div>
            <!---Profile Tab-->
            <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
              <!-- Content Field -->
              <label for="contentField" id="contentId">Profile</label>
              <form id="editForm" action="/update-proxy" method="post">
                <input type="hidden" id="contentIdField" name="contentId" value="">
                <div class="mb-3">
                  <textarea class="form-control" id="contentField" name="content" rows="3" placeholder="Click 'Practice' below to a practice interview and autogenerate your proxy's profile or just update manually here."></textarea>
                </div>


              </form>
              <!-- <button type="button" class="btn btn-primary" id="train" onclick="tryShare()">Train</button> -->
              <button type="button" class="btn btn-primary" id="meetProxy" onclick="meet('share')">Meet <%= Object.keys(proxies)[0] %></button>
              <button type="button" class="btn btn-primary" id="trainProxy" onclick="train()">Train <%= Object.keys(proxies)[0] %></button>
              <button type="button" class="btn btn-secondary" id="save" onclick="updateProxy()">Save</button>
            </div>
            
            <!-- Share Tab -->
            <div class="tab-pane fade" id="custom" role="tabpanel" aria-labelledby="custom-tab">
              <div id='guests'>Add a Guest:</div>
              <div class="input-group guests input-group-sm mb-3 ">
                <input type="text" id="buttonName" placeholder="Guest Name" required>
                <button type="button" id="addGuestButton" onClick="addButton()" class="btn btn-primary">Add</button>
              </div>

              <div id='guests'>Guests:</div>
              <div role="group" aria-label="Basic checkbox toggle button group" id="hostButtons">
                <% if (context.submitAsOptions) { %>
                <% context.submitAsOptions.forEach(function(option) { %>
                <div class="form-check">
                  <input type="checkbox" class="form-check-input" id="<%= option %>" autocomplete="off" checked>
                  <label class="form-check-label" for="<%= option %>">
                    <%= option %>
                  </label>
                </div>
                <% }); %>
                <% } else {%>
                <% context.submitAsOptions.forEach(function(option) { %>
                <div class="form-check">
                  <input type="checkbox" class="form-check-input" id="<%= option %>" autocomplete="off">
                  <label class="form-check-label" for="<%= option %>">
                    <%= option %>
                  </label>
                </div>
                <% });} %>
              </div>
            </div>

            <div id="proxyCreated" class="alert alert-success" role="alert" style="display: none;">
                <div id='Intro'>
                  <%= training ? 'Meet ' + Object.keys(proxies)[0]  +'!' : "Your proxy's Avatar has been generated! It's time to train " + Object.keys(proxies)[0]  + " to inhabit it's new identity." %>
                </div>
              </div>
          </div>
          <div class='links'>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>

  <!-- Feedback Modal -->
  <div class="modal fade" id="feedbackModal" tabindex="-1" aria-labelledby="feedbackModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="feedbackModalLabel">Feedback</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="feedbackForm">
            <div class="mb-3">
              <label for="feedbackText" class="col-form-label">Your Feedback:</label>
              <textarea class="form-control" id="feedbackText"></textarea>
            </div>
            <div class="mb-3">
              <label for="proxyEmail" class="form-label">Email address</label>
              <input type="email" class="form-control" id="proxyEmail" placeholder="name@example.com">
            </div>
            <button type="submit" class="btn btn-primary">Send Feedback</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- TTS Threshold Modal -->
  <div class="modal" tabindex="-1" id="rateLimitModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Notice</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>You've reached the maximum number of Text to Speech requests. Try again later. If you're enjoying
            the app, consider supporting it via Patreon.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Nah</button>
          <button type="button" class="btn btn-primary" id="patreonButton">Support on Patreon</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Transcript Modal -->
  <div class="modal fade" id="transcriptModal" tabindex="-1" aria-labelledby="transcriptModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="transcriptModal">Transcript</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" id="transcript"></div>
      </div>
    </div>
  </div>

</body>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

